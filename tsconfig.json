{
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "declarationDir": "types",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src",
        "declaration.d.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "src/**/*.test.tsx",
        "src/**/*.stories.tsx"
    ]
}